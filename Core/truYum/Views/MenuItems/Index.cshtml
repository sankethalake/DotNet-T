@model IEnumerable<TruYumCore.Models.MenuItem>
@{
    ViewBag.Title = "Menu Items - TruYum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Menu Items</h1>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>Name</th>
            <th>Price</th>
            <th>Free Delivery</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menuItem in Model)
        {
            if (menuItem.Active && menuItem.DateOfLauch <= DateTime.Now)
            {
        <tr>
            <td>@menuItem.Name</td>
            <td>@menuItem.Price</td>
            <td>@Html.DisplayFor(m => menuItem.FreeDelivery)</td>
            <td>@menuItem.Category.Name</td>
            <td>@Html.ActionLink("Add to Cart", "AddToCart", "Cart", new { id = menuItem.Id }, null)</td>
        </tr>
            }
        }
    </tbody>
</table>
